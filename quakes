import requests

def save_url_text_to_file(url, filename):
    try:
        # Send a GET request to the URL
        response = requests.get(url)
        
        # Check if the request was successful
        response.raise_for_status()
        
        # Get the text content of the response
        text_content = response.text
        
        # Open a file for writing (create it if it doesn't exist)
        with open(filename, 'w', encoding='utf-8') as file:
            file.write(text_content)
        
        print(f"Content saved to {filename}")
    except requests.exceptions.RequestException as e:
        print(f"An error occurred: {e}")

# Example usage
url = "https://allquakes.com/api/getRegionStats_01.php?regionId=&type=2&year=2009&cities=0"
filename = "test.txt"
save_url_text_to_file(url, filename)
